mixin collectionUnit1(uClass,prodName,priceVal,imgSrc,altText)
	//- for section.collectionDisplay
	//- where uClass,prodName,priceVal are strings
	
	section(class=uClass).collectionUnit
		.imageHolder
			//- image dimension 190x331px
			if imgSrc
				img(src=imgSrc, alt=altText)
			else
				img(src="http://lorempixel.com/190/331", alt="Placeholder Image")
			.imgShader1
				a(href="#") Add to Cart
		//- Chifon &amp; Floral Dress
		h3=prodName
		//- $22.5
		p=priceVal
		div.colourSelect
			//- clicking on the colour select should switch the image or substitute a different one by changing the src
			a(href="javascript:void(0)").colour1
			a(href="javascript:void(0)").colour2

mixin collectionUnit2(uClass,prodName,priceVal)
	//- for section.collectionDisplay
	//- where uClass,prodName,priceVal are strings
	
	//- in this version we will setup the image using background instead of an <img> or <picture> element
	
	section(class=uClass).collectionUnit
		//- image dimension 190x331px
		.imgHolder
			.imgShader
				+addToCartButton1
		//- Chifon &amp; Floral Dress
		h3=prodName
		//- $22.5
		p.price=priceVal
		div.colourSelect
			//- clicking on the colour select should switch the image or substitute a different one by changing the src
			//- width height = 28x12px
			a(href="javascript:void(0)").colour1
			a(href="javascript:void(0)").colour2

mixin purchaseShader1
	//- each of the parents must have a position relative
	//- it must be placed within the parent container
	//- refine this within one of the test divs
	
	if block
		block
	else
		div.purchaseShader
			p.price
				span $
				| 99
			a(href='javascript:void(0)').button
				div.button
					//- for the slanted slash
					div.slash
					//- the div will hold the before element
					p.text Add to Cart

mixin addToCartButton1
	if block
		block
	else
		div.addToCartButton
			a(href='javascript:void(0)').button
				div.button
					//- for the slanted slash
					div.slash
					//- the div will hold the before element
					p.text Add to Cart

