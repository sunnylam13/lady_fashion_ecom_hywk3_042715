section.footer
	.wrapper

		//- ===================================
		//- 		QUICK LINK
		//- ===================================

		// QUICK LINK  ------------------------------------------------
		section.quickLink
			h2 Quick-Link
			+companyLogo1(companyLogoEnabled)
			//- on :hover you'll need the custom bar to appear and pad/indent the link
			div.linkbox
				a(href="#") My Account
				a(href="#") Contact Us
				a(href="#") Store Location
				a(href="#") Size Guide
				a(href="#") Shipping Info
		// END QUICK LINK ------------------------------------------------
		
		//- END QUICK LINK
		

		//- ===================================
		//- 		RECENT BLOGS
		//- ===================================

		// RECENT BLOGS  ------------------------------------------------
		section.recentBlogs
			h2 Recent Blogs
			+companyLogo1(companyLogoEnabled)
			//- when you hover over the item a "Read More" should appear
			//- enter blog entries
			+blogHeadlineEntry1('Top 10 Trending Dresses')
