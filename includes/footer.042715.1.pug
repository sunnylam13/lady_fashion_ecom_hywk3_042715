		//- ===================================

		// CONTACT US  ------------------------------------------------
		section.contactinfo
			h2 Find Us On
			+companyLogo1(companyLogoEnabled)
			aside.socialIcons
				//- the following are pure links <a> with a <span> child
				//- a(href=fbLink,class='fa-facebook')
				//- a(href=twitterLink,class='fa-twitter')
				//- a(href=pinterestLink,class='fa-pinterest')
				//- a(href=instagramLink,class='fa-instagram')
				//- a(href=gplusLink,class='fa-google-plus')
				+iconLink042315a('fa-facebook',fbLink)
